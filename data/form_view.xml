<?xml version='1.0' encoding='UTF-8'?>
<odoo>
    <data>
        <record id="hs_code_product_view" model="ir.ui.view">
            <field name="arch" type="xml">
            <data>
                <field name="detailed_type" position="after">
                    <field name="x_hs_code" optional="show"/>
                </field>
            </data>
            </field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="mode">extension</field>
            <field name="model">product.template</field>
            <field name="name">HS Code: Product form view</field>
            <field name="priority">160</field>
            <field name="type">form</field>
        </record>
        <record id="hs_code_invoice_view" model="ir.ui.view">
            <field name="arch" type="xml">
                <field name="product_id" position="after">
                    <field optional="show" name="x_hs_code"/>
                </field>
            </field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="mode">extension</field>
            <field name="model">account.move</field>
            <field name="name">HS Code: Invoice form view</field>
            <field name="priority">160</field>
            <field name="type">form</field>
        </record>
    </data>
</odoo>